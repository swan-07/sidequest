{
  "manifest_version": 3,
  "name": "SideQuest",
  "description": "Gives you required sidequests every few minutes to increase productivity and break you out of your scrolling habit.",
  "version": "0.0.1",
  "icons": {
      "16": "icon/icon-16.png",
      "48": "icon/icon-48.png",
      "128": "icon/icon-128.png"
  },
  "action": {
      "default_title": "Sidequest",
      "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "idle",
    "alarms",
    "system.display",
    "storage"
  ],
  "host_permissions": [
      "*://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": []
}
